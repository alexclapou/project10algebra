from texttable import Texttable
from codewords import *

def binary_list(number):
    '''
    convert a decimal number to a binary as a list of k elements
    parameters:
        number - a number
    output:
        binary_string - binary list with k elements
    '''
    number_list = []
    while number:
        number_list.append(number % 2)
        number //= 2
    return reversed(number_list)

def write_polynomial(p):
    '''
    write the polynomial
    parameters:
        polynomial variable
    output:
    '''
    list_p = []
    p = input("p = ")
    if p[:1] == "1":
        list_p.append(1)
        p = p[1:]
    p = p.replace(" ", "")
    p = p.replace("+", "")
    p = p.replace("x", "")
    p = list(map(int, p))
    index = 1
    while index <= p[-1]:
        if index in p:
            list_p.append(1)
        else:
            list_p.append(0)
        index += 1
    return list_p

p = ""
n = int(input("n = "))
k = int(input("k = "))
p = write_polynomial(p)
q = binary_list(n)
print(q)
#we have 2^k code words

